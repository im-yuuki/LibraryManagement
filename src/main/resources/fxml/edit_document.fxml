<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0"
      spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
   <HBox alignment="CENTER" prefWidth="200.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name"/>
      <Region prefHeight="0.0" HBox.hgrow="ALWAYS"/>
      <TextField fx:id="nameField" prefWidth="180.0" promptText="Name"/>
   </HBox>
   <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefWidth="200.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Qty."/>
      <Region prefHeight="0.0" HBox.hgrow="ALWAYS"/>
      <TextField fx:id="qtyField" prefWidth="180.0" promptText="1-9999..."/>
   </HBox>
   <HBox alignment="CENTER" layoutX="10.0" layoutY="120.0" prefWidth="200.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Author"/>
      <Region prefHeight="0.0" HBox.hgrow="ALWAYS"/>
      <TextField fx:id="authorField" prefWidth="180.0" promptText="Author"/>
   </HBox>
   <HBox alignment="CENTER" layoutX="30.0" layoutY="250.0" prefWidth="200.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Publisher"/>
      <Region prefHeight="0.0" HBox.hgrow="ALWAYS"/>
      <TextField fx:id="publisherField" prefWidth="180.0" promptText="Publisher"/>
   </HBox>
   <HBox alignment="CENTER" layoutX="30.0" layoutY="360.0" prefWidth="200.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Category"/>
      <Region prefHeight="0.0" HBox.hgrow="ALWAYS"/>
      <TextField fx:id="categoryField" prefWidth="180.0" promptText="Category"/>
   </HBox>
   <HBox alignment="TOP_RIGHT" prefWidth="200.0" spacing="10.0">
      <Button mnemonicParsing="false" onAction="#onSubmit" text="Save"/>
      <Button mnemonicParsing="false" onAction="#onCancel" text="Cancel"/>
   </HBox>
</VBox>
